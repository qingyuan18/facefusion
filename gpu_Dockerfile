ENV PATH=/opt/program:/usr/local/cuda:${PATH}
ENV LD_LIBRARY_PATH=/usr/lib/x86_64-linux-gnu/:$LD_LIBRARY_PATH



WORKDIR /opt/program

COPY ./ /opt/program



RUN apt-get update
RUN apt-get install python3.10 -y
RUN apt-get install python-is-python3 -y
